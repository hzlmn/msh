{
    "version": "0.1.0",
    "command": "make",
    "tasks": [
        {
            "taskName": "build",
            // Make this the default build command.
            "isBuildCommand": true,
            // Show the output window only if unrecognized errors occur.
            "showOutput": "always",
            "command": "go install",
            // No args
            "args": ["${relativeFile}"]
        }
    ]
}
